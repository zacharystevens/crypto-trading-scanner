# ==============================================================================
# TRADING SYSTEM CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and customize for your environment

# ENVIRONMENT SETTINGS
TRADING_ENVIRONMENT=development

# MARKET DATA CONFIGURATION
TRADING_MIN_VOLUME_USDT=1000000
TRADING_MIN_PRICE=0.0001
TRADING_MAX_PRICE=150000

# TECHNICAL ANALYSIS CONFIGURATION
TRADING_FVG_THRESHOLD=0.005
TRADING_FVG_PROXIMITY=0.02
TRADING_CONFLUENCE_THRESHOLD=0.6

# CACHING CONFIGURATION
TRADING_TICKER_CACHE_DURATION=60
TRADING_ANALYSIS_CACHE_DURATION=900

# API CONFIGURATION
TRADING_API_TIMEOUT=10000
TRADING_ENABLE_RATE_LIMIT=true

# FLASK CONFIGURATION
TRADING_FLASK_HOST=localhost
TRADING_FLASK_PORT=5001
TRADING_FLASK_DEBUG=true

# LOGGING CONFIGURATION
TRADING_LOG_LEVEL=INFO

# ==============================================================================
# DEMO DATA CONFIGURATION
# ==============================================================================
TRADING_DEMO_MODE=true
# Enable demo mode when exchange connection fails

TRADING_DEMO_SYMBOLS=["BTC/USDT", "ETH/USDT", "BNB/USDT"]
# Default symbols for demo mode (JSON array format)

TRADING_DEMO_BASE_PRICES={"BTC/USDT": 50000, "ETH/USDT": 3000, "BNB/USDT": 300}
# Base prices for demo data generation (JSON object format)

# Note: Complex demo data (market_movers, opportunities) use defaults from settings.py
# Override in code if needed for specific environments
